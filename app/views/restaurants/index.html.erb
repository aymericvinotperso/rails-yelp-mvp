<h2>Restaurants</h2>

<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <%= "#{restaurant.name}" %> - <%= "#{restaurant.address}" %>
    <%= link_to('See restaurant', restaurant_path(restaurant)) %>
  </li>
  <% end %>
</ul>

<p>
  <%= link_to('Create a new restaurant', new_restaurant_path ) %>
</p>
